<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layoutDirection="locale"
    tools:context=".SecondAlertActivity">

    <LinearLayout
        android:background="#f8f8f8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Alert 2"
            android:textStyle="bold"
            android:textColor="#6329C8"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urgence"
            android:textColor="#5711D1"
            android:textSize="27sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/IDetape1"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/firstalert"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Envoi de noftification aux personnes à proximités\n
            et un SOS aux personnes de confidents\n+ votre localisaon"/>

        <ImageView
            android:onClick="etape3starts"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/alter3"/>

        <ImageView
            android:onClick="stopAllert"
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arret"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Arréter l'alerte"
            android:textColor="#CD0808"/>

    </LinearLayout>

</ScrollView>